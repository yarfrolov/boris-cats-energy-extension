{
  "manifest_version": 3,
  "name": "Boris the cat's energy",
  "version": "1.2.2",
  "description": "Для менеджеров, дизайнеров и тех, кто не работает с кодом.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://yarfrolov.github.io/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-loader.js"
      ]
    }
  ]
}