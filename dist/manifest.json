{
  "manifest_version": 3,
  "name": "Boris the cat's energy",
  "version": "1.0.0",
  "description": "Для менеджеров, дизайнеров и тех, кто не работает с кодом.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://yourusername.github.io/*"
  ],
  "icons": {
    "16": "icon16.jpeg",
    "48": "icon48.jpeg",
    "128": "icon128.jpeg"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-loader.js"]
    }
  ]
}
